<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) %magenta([%12thread]) %cyan(%-45logger{45}) : %msg%n
            </pattern>
        </encoder>
    </appender>

    <!--将appender加入到root根标签-->
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>